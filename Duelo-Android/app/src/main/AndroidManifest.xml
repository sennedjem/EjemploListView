<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uis.tp.grupo1.duelodeleyendas" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PersonajeListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PersonajeSeleccionadoActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".PersonajeListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PersonajeListActivity" />
        </activity>
        <activity
            android:name=".EstadisticasActivity"
            android:label="@string/title_activity_estadisticas"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
